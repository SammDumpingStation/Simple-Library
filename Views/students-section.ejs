<!DOCTYPE html>
<html lang="en">
<%- include('./Partials/head.ejs') %>
  <body>

    <%- include('./Partials/navigation.ejs') %>

    <main>
      <h1 class="title">Adding New Students</h1>
      <form class="form">
        <label class="label" for="firstname">First Name</label>
        <input
          class="input student-fname"
          type="text"
          name="fname"
          placeholder="Enter your first name"
        />

        <label class="label" for="lastname">Last Name</label>
        <input
          class="input student-lname"
          type="text"
          name="fname"
          placeholder="Enter your last name"
        />

        <div class="button-container">
          <button type="button" class="button see-button">See Students</button>
          <button type="button" class="button submit-button">Submit</button>
        </div>
      </form>
    </main>

    <footer>
      <div class="inside-footer">
        <nav class="see-records">
          <ul class="ul-records">
            <li>First Name</li>
            <li>Last Name</li>
            <li>Edit</li>
            <li>Delete</li>
          </ul>
        </nav>
        <div class="records-container">
          <% if (students.length != 0) { %> <% students.forEach(student => { %>
          <div class="records">
            <p><%= student.fName %></p>
            <p><%= student.lName %></p>
            <button class="update">Update</button>
            <button class="delete">Delete</button>
          </div>
          <% }) %> <% } else { %>
          <p>No Array is here!</p>
          <% } %>
        </div>
      </div>
    </footer>
    <button class="button reset-button">Reset</button>

    <!-- <script src="../JS-Files/students-records.js"></script> -->
  </body>
</html>
