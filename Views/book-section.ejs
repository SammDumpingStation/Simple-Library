<!DOCTYPE html>
<html lang="en">
<%- include('./Partials/head.ejs') %>
  <body>

    <%- include('./Partials/navigation.ejs') %>

    <main>
      <h1 class="title">Adding New Books</h1>
      <form class="form">
        <label class="label" for="title">Book Title</label>
        <input
          class="input book-title"
          type="text"
          name="title"
          placeholder="Enter the Book Title"
          required
        />

        <label class="label" for="author">Author Name</label>
        <input
          class="input book-author"
          type="text"
          name="author"
          placeholder="Enter Author Name"
          required
        />

        <div class="button-container">
          <button type="button" class="button see-button">See Books</button>
          <button type="button" class="button submit-button">Submit</button>
        </div>
      </form>
    </main>

    <footer>
      <div class="inside-footer">
        <nav class="see-records">
          <ul class="ul-records">
            <li>First Name</li>
            <li>Last Name</li>
            <li>Edit</li>
            <li>Delete</li>
          </ul>
        </nav>
        <div class="records-container">
          <% if (books != 0) { %> <% books.forEach(book => { %>
          <div class="records">
            <p><%= book.bName %></p>
            <p><%= book.bAuthor %></p>
            <button class="update">Update</button>
            <button class="delete">Delete</button>
          </div>
          <% }) %> <% } else { %>
          <p>Nothing to see here!</p>
          <% } %>
        </div>
      </div>
    </footer>
    <button class="button reset-button">Reset</button>
    <!-- <script src="../JS-Files/book-records.js"></script> -->
  </body>
</html>
